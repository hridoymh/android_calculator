<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="9"
    android:padding="8dp"
    tools:context=".MainActivity">


    <!--  Secondary View  -->

    <TextView
        android:id="@+id/secondary_viewId"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.7"
        android:gravity="right"
        android:textSize="20sp" />

    <!--  Primary View  -->
    <TextView
        android:id="@+id/primary_viewId"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:gravity="right"
        android:paddingRight="10dp"
        android:text="0"

        android:textSize="50dp" />
    <!--  3  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="6">

        <Button
            android:id="@+id/mc_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="MC"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_margin="5dp"
            android:textSize="15dp" />
        <Button
            android:id="@+id/mr_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="MR"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_margin="5dp"
            android:textSize="15dp" />

        <Button
            android:id="@+id/mPlus_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="M+"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_margin="5dp"
            android:textSize="15dp" />

        <Button

            android:id="@+id/mMinus_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="M-"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_margin="5dp"
            android:textSize="15dp"
            />

        <Button
            android:id="@+id/ms_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_margin="5dp"
            android:text="MS"
            android:textSize="15dp" />

        <Button
            android:id="@+id/m_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="M?"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_margin="5dp"
            android:textSize="15sp" />

    </LinearLayout>

    <!--  4  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:textSize="25sp"
        android:weightSum="4">

        <Button
            android:id="@+id/percent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="op_clicked"
            android:text="%"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <Button
            android:id="@+id/ce_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="ceBtn"
            android:text="CE"

            android:textColor="@color/black"
            android:textSize="25dp" />

        <Button
            android:id="@+id/c_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="cBtn"
            android:text="C"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <!--?-->
        <Button
            android:id="@+id/backsp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="backspBtn"
            android:text="←"
            android:textColor="#DD1B1B"
            android:textSize="34sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!--  5  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/oneByx_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="invBtn"
            android:text="1/x"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <Button
            android:id="@+id/xSquare_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="sqBtn"
            android:text="x^2"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <Button
            android:id="@+id/squareRoot_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="sqrtBtn"
            android:text="√"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <!--?-->
        <Button
            android:id="@+id/div"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="op_clicked"
            android:text="÷"
            android:textColor="@color/black"
            android:textSize="35dp" />
    </LinearLayout>

    <!--  6  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/b7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="number_clicked"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <Button
            android:id="@+id/b8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="number_clicked"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <Button
            android:id="@+id/b9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="number_clicked"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="30dp" />
        <!--?-->
        <Button
            android:id="@+id/mult"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="op_clicked"
            android:text="*"
            android:textColor="@color/black"
            android:textSize="25dp" />
    </LinearLayout>

    <!--  7  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/b4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="number_clicked"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <Button
            android:id="@+id/b5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="number_clicked"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <Button
            android:id="@+id/b6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="number_clicked"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="30dp" />
        <!--?-->
        <Button
            android:id="@+id/sub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="op_clicked"
            android:text="—"
            android:textColor="@color/black"
            android:textSize="35dp" />
    </LinearLayout>

    <!--  8  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/b1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="number_clicked"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <Button
            android:id="@+id/b2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="number_clicked"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <Button
            android:id="@+id/b3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="number_clicked"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="30dp" />
        <!--?-->
        <Button
            android:id="@+id/plus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="op_clicked"
            android:text="+"
            android:textColor="@color/black"
            android:textSize="35dp" />
    </LinearLayout>

    <!--  9  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/plsmns"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="number_clicked"
            android:text="+/-"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Button
            android:id="@+id/b0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="number_clicked"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <Button
            android:id="@+id/point"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="number_clicked"
            android:text="."
            android:textColor="@color/black"
            android:textSize="35dp" />
        <!--?-->
        <Button
            android:id="@+id/equal_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="equalBtn"
            android:text="="
            android:textColor="@color/black"
            android:textSize="50dp"

            />
    </LinearLayout>


</LinearLayout>